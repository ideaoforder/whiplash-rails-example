<%- model_class = OrderItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:order_id) %>:</strong></dt>
  <dd><%= @order_item.order_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sku) %>:</strong></dt>
  <dd><%= @order_item.sku %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @order_item.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @order_item.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @order_item.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unshippable) %>:</strong></dt>
  <dd><%= @order_item.unshippable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:originator_id) %>:</strong></dt>
  <dd><%= @order_item.originator_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_id) %>:</strong></dt>
  <dd><%= @order_item.item_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:available) %>:</strong></dt>
  <dd><%= @order_item.available %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picked) %>:</strong></dt>
  <dd><%= @order_item.picked %></dd>
  <dt><strong><%= model_class.human_attribute_name(:packed) %>:</strong></dt>
  <dd><%= @order_item.packed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:packaging) %>:</strong></dt>
  <dd><%= @order_item.packaging %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              order_items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_item_path(@order_item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_item_path(@order_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
